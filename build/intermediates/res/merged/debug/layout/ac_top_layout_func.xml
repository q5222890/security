<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/af_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/af_user_icon_img"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ac_top_func_user_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/af_user_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="管理员：李四" />

            <TextView
                android:id="@+id/af_user_from_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广州市天河分局" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/af_func"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/af_user_info"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/af_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ac_top_func_change" />

        <!--<ImageButton-->
            <!--android:id="@+id/af_lock_btn"-->
            <!--android:layout_width="128dp"-->
            <!--android:layout_height="41dp"-->
            <!--android:background="@drawable/ac_top_func_lock" />-->

        <ImageButton
            android:id="@+id/af_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ac_top_func_setting" />

        <ImageButton
            android:id="@+id/af_help_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ac_top_func_help" />
    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/logo" />

</RelativeLayout>