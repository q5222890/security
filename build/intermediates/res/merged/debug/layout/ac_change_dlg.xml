<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@drawable/all_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ac_change_dlg_finger"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/float_ad_shadow"
            android:src="@color/white_color" />

        <ProgressBar
            android:id="@+id/ac_change_dlg_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/loading_anim"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ac_change_dlg_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="请管理员按下手指"
            android:textColor="@color/white_color"
            android:textSize="@dimen/all_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ac_change_dlg_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ac_change_dlg_back" />
    </LinearLayout>

</RelativeLayout>