<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/white_color"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/ac_go_gun_type_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="手枪"
        android:textColor="@color/car_no_bule" />

    <TextView
        android:id="@+id/ac_go_gun_id_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/car_no_bule" />

    <TextView
        android:id="@+id/ac_go_gun_num_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/car_no_bule" />

    <TextView
        android:id="@+id/ac_go_p_id_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/car_no_bule" />

    <TextView
        android:id="@+id/ac_go_pname_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="张三"
        android:textColor="@color/car_no_bule" />

    <TextView
        android:id="@+id/ac_go_gun_rnum_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/car_no_bule" />

</LinearLayout>