         <style name="ThemeOneRadioButtomStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
                <item name="android:button">@drawable/checkbox_custom_bg_color</item> 
                <item name="android:textColor">@color/white_color</item>  
                <item name="android:textSize">@dimen/all_text_size</item>
                <item name="android:paddingLeft">28dp</item> 
                <item name="android:clickable">true</item> 
			</style>






    -->
    <style name="ThemeOneRadioButtomStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:drawableLeft">@drawable/checkbox_custom_bg_color</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/all_text_size</item>
        <item name="android:clickable">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="ThemeOneMainTitleBackgroundStyle">
        <!-- <item name="android:background">@drawable/title_back</item> -->
    </style>

    <style name="ThemeOneMainGridViewStyle">
        <item name="android:background">@color/list_back_color</item>
        <item name="android:textColor">@color/pale_gray_color</item>
        <item name="android:textSize">@dimen/all_text_size</item>
        <item name="android:shadowColor">@color/white_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="ThemeTwoDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:buttonStyle">@style/ThemeOneButtonStyle</item>
        <item name="android:editTextStyle">@style/ThemeOneEditBoxStyle</item>
        <item name="android:radioButtonStyle">@style/ThemeOneRadioButtomStyle</item>
    </style>

    <style name="ThemeOneDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:buttonStyle">@style/ThemeOneButtonStyle</item>
        <item name="android:editTextStyle">@style/ThemeOneEditBoxStyle</item>
        <item name="android:radioButtonStyle">@style/ThemeOneRadioButtomStyle</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:buttonStyle">@style/ThemeOneButtonStyle</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@android:color/transparent </item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->

    </style>

    <style name="main_btn_style">
        <item name="android:button">@null</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/button_b</item>
    </style>
